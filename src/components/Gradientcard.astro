---
import Button from "./Button.astro";
const header = Astro.props.header;
const text = Astro.props.text;
---

<article>
  <slot />
  <h3>{header}</h3>
  <p>{text}</p>
  <div class="btn-container">
    <Button text="LINEUP" />
  </div>
</article>

<style>
  article {
    background: linear-gradient(180deg, #0f1843, #643b81);
    border-radius: 10px;
    padding: 20px;
    margin: 10px;
    width: 200px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    color: white;
  }

  h2 {
    font-size: 24px;
    letter-spacing: 2px;
    font-weight: bold;
    color: #fff;
  }
</style>
