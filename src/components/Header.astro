---
import "../pages/global.css";
---

<header>
  <p>28/8-30/8 2025</p>
  <a href="../pages"> <img src="/img/karrusel.png" alt="logo" /></a>

  <div class="countdown">
    <span class="days">254</span><span class="label"> DAGE</span> |
    <span class="hours">0</span><span class="label"> TIMER</span> |
    <span class="minutes">16</span><span class="label"> MIN</span>
  </div>
</header>

<style>
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    opacity: 0.8;
    color: #fff;
    padding: 10px 20px;
    font-family: "Allerta", sans-serif;
    height: 60px;
    background-color: rgba(0, 0, 0, 0.44);
  }

  .countdown {
    font-size: 18px;
    font-weight: bold;
    text-shadow: 4px 2px 4px #f72862;
    color: #fff;
  }

  p {
    font-size: 18px;
    font-weight: bold;
    text-shadow: 4px 2px 4px #f72862;
  }

  img {
    width: 65px;
    height: auto;
  }
</style>
